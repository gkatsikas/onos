{
    "apps" : {
        "org.onosproject.metron.apps" : {
            "add" : {
                "servicechains" : [
                    {
                        "name"       : "metron-srv-rss-singleport-snort",
                        "type"       : "generic",
                        "networkId"  : 1,
                        "cpuCores"   : 1,
                        "maxCpuCores": 1,
                        "scope"      : "server-rss",
                        "components" : [
                            {
                                "name"  : "nf1",
                                "type"  : "standalone",
                                "class" : "dpi",
                                "id"    : "snort-nf1"
                            }
                        ],
                        "processors": [
                            {
                                "name"  : "nf1",
                                "blocks": [
                                    {
                                        "block": "FromSnortDevice",
                                        "instance": "nf1_fd1",
                                        "configArgs": "DEVNAME eno1, EXEC '/usr/local/bin/snort', ARGS '--daq dpdkring --daq-mode inline --daq-var dpdk_args=\"-l 7 --proc-type secondary \" --daq-var dpdk_pool=$POOL -i dpdk0:dpdk1 -c snortconfig/snort.conf', FROM_RING dpdk0_2_snort, TO_RING snort_2_dpdk1, TO_REVERSE_RING snort_2_dpdk0",
                                        "configFile": ""
                                    },
                                    {
                                        "block": "ToSnortDevice",
                                        "instance": "nf1_td1",
                                        "configArgs": "DEVNAME eno1",
                                        "configFile": ""
                                    }
                                ],
                                "graph" : [
                                    {
                                        "src": {
                                            "instance": "nf1_fd1",
                                            "port": 0
                                        },
                                        "dst": {
                                            "instance": "nf1_td1",
                                            "port": 0
                                        }
                                    }
                                ]
                            }
                        ],
                        "topology": {
                            "network": {
                                "ingressPoints": [
                                    {
                                        "deviceId": "rest:192.16.125.166:80",
                                        "portIds": [
                                            {
                                                "portId": 0
                                            }
                                        ]
                                    }
                                ],
                                "egressPoints": [
                                    {
                                        "deviceId": "rest:192.16.125.166:80",
                                        "portIds": [
                                            {
                                                "portId": 0
                                            }
                                        ]
                                    }
                                ]
                            },
                            "server": [
                                {
                                    "src" : {
                                        "entity"      : "source",
                                        "interface"   : "-"
                                    },
                                    "dst" : {
                                        "entity"      : "nf1",
                                        "interface"   : "eno1"
                                    }
                                },
                                {
                                    "src" : {
                                        "entity"      : "nf1",
                                        "interface"   : "eno1"
                                    },
                                    "dst" : {
                                        "entity"      : "destination",
                                        "interface"   : "-"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}
